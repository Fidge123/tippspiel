    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/throttler": "^2.0.0",
    "@nestjs/typeorm": "^7.1.5",
    "axios": "^0.21.0",
    "cache-manager-redis-store": "^2.0.0",
    "compression": "^1.7.4",
    "helmet": "^4.1.0",
    "jwks-rsa": "^2.0.3",
    "nodemailer": "^6.6.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.3.3",
